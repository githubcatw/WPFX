<Window x:Class="WPFX.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFX.Demo"
		xmlns:e="clr-namespace:WPFX;assembly=WPFX"
        mc:Ignorable="d"
        Title="WPFX Demo" Height="450" Width="800">
	<Grid>
		<e:Toggle x:Name="toggle" Toggled="Toggle_Toggled" HorizontalAlignment="Left" Height="62" Margin="10,10,0,0" VerticalAlignment="Top" Width="62"/>
		<Label x:Name="toggleState" Content="Off" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="62" HorizontalContentAlignment="Center"/>
	</Grid>
</Window>
